<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aboutpage2Activity">


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/back_arrow"
        android:src="@mipmap/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/pagetwoestep"
        android:layout_below="@+id/back_arrow"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/page1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/about_you"
        android:textColor="#263238"
        android:layout_below="@+id/pagetwoestep"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:text="About you!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:layout_below="@id/about_you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#263238"
            android:id="@+id/yearBorn"
            android:text="Year Born"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.warkiz.widget.IndicatorSeekBar
            android:layout_below="@+id/yearBorn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_max="100"
            app:isb_min="-1.0"
            app:isb_progress="25"
            app:isb_seek_smoothly="true"
            app:isb_ticks_count="5"
            app:isb_show_tick_marks_type="oval"
            app:isb_tick_marks_size="13dp"
            app:isb_show_tick_texts="true"
            app:isb_tick_texts_size="15sp"
            app:isb_tick_texts_color="#EFEFEF"
            app:isb_thumb_color="#FBE551"
            app:isb_thumb_size="20dp"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_indicator_color="#EFEFEF"
            app:isb_indicator_text_color="#EFEFEF"
            app:isb_indicator_text_size="18sp"
            app:isb_track_background_color="#EFEFEF"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="#FBE551"
            app:isb_track_progress_size="4dp"
            app:isb_only_thumb_draggable="false"/>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_id"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/btn_dark_bg"
        android:paddingBottom="35dp"
        android:text="Next"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</RelativeLayout>