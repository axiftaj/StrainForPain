<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpTwoActivity">


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/back_arrow"
        android:src="@mipmap/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@+id/back_arrow"
        android:id="@+id/about_you"
        android:textColor="#263238"
        android:fontFamily="@font/poppins_bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:text="About you!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/pagetwoestep"
        android:layout_below="@+id/about_you"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/page1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <RelativeLayout
        android:id="@+id/yearBorn_relativelayout"
        android:layout_margin="20dp"
        android:layout_below="@id/pagetwoestep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="18sp"
            android:textColor="#263238"
            android:text="Year Born"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/poppins_semi_bold"
            android:id="@+id/yearBorn"
            android:textSize="18sp"
            android:textColor="#263238"
           android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/yearBorn_seekBar"
            android:layout_below="@+id/yearBorn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_seek_smoothly="true"
            app:isb_show_tick_marks_type="oval"
            app:isb_tick_marks_size="13dp"
            app:isb_show_tick_texts="true"
            app:isb_tick_texts_size="15sp"
            app:isb_tick_texts_color="#EFEFEF"
            app:isb_thumb_color="#FBE551"
            app:isb_thumb_size="20dp"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_indicator_color="#FBE551"
            app:isb_indicator_text_color="#EFEFEF"
            app:isb_indicator_text_size="18sp"
            app:isb_track_background_color="#EFEFEF"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="#FBE551"
            app:isb_track_progress_size="4dp"
            app:isb_only_thumb_draggable="false"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/weight_relativelayout"
        android:layout_margin="20dp"
        android:layout_below="@id/yearBorn_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="18sp"
            android:textColor="#263238"
            android:id="@+id/weighttext"
            android:text="Weight"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/poppins_semi_bold"
            android:textAlignment="center"
            android:id="@+id/weight"
            android:textSize="18sp"
            android:textStyle="normal"
            android:layout_marginRight="3dp"
            android:text="25"
            android:textColor="#263238"
            android:layout_toLeftOf="@+id/unit"
            android:hint="25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:fontFamily="@font/poppins_light"
            android:layout_above="@+id/weight_seekBar"
            android:layout_marginBottom="2dp"
            android:textAlignment="center"
             android:id="@+id/unit"
            android:layout_alignParentRight="true"
            android:textColor="#DCDCDC"
            android:hint="KG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/weight_seekBar"
            android:layout_below="@+id/weighttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_max="150"
            app:isb_progress="25"
            app:isb_seek_smoothly="true"
            app:isb_show_tick_marks_type="oval"
            app:isb_tick_marks_size="13dp"
            app:isb_show_tick_texts="true"
            app:isb_tick_texts_size="15sp"
            app:isb_tick_texts_color="#EFEFEF"
            app:isb_thumb_color="#BC6C3A"
            app:isb_thumb_size="20dp"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_indicator_color="#BC6C3A"
            app:isb_indicator_text_color="#EFEFEF"
            app:isb_indicator_text_size="18sp"
            app:isb_track_background_color="#EFEFEF"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="#BC6C3A"
            app:isb_track_progress_size="4dp"
            app:isb_only_thumb_draggable="false"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/heigh_realtivelayout"
        android:layout_margin="20dp"
        android:layout_below="@id/weight_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#263238"
            android:id="@+id/heighttext"
            android:text="Height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginRight="3dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:id="@+id/height"
            android:textSize="18sp"
            android:textColor="#263238"
            android:layout_toLeftOf="@+id/height_unit"
           android:hint="3"
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/poppins_light"
            android:id="@+id/height_unit"
            android:layout_alignParentRight="true"
            android:textColor="#DCDCDC"
            android:hint="Ft"
            android:text="Ft"
            android:layout_marginBottom="3dp"
            android:layout_above="@+id/height_seekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/height_seekBar"
            android:layout_below="@+id/heighttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_max="10"
            app:isb_min="0"
            app:isb_progress="3"
            app:isb_seek_smoothly="true"
            app:isb_show_tick_marks_type="oval"
            app:isb_tick_marks_size="13dp"
            app:isb_show_tick_texts="true"
            app:isb_tick_texts_size="15sp"
            app:isb_tick_texts_color="#EFEFEF"
            app:isb_thumb_color="#44C5EA"
            app:isb_thumb_size="20dp"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_indicator_color="#44C5EA"
            app:isb_indicator_text_color="#EFEFEF"
            app:isb_indicator_text_size="18sp"
            app:isb_track_background_color="#EFEFEF"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="#44C5EA"
            app:isb_track_progress_size="4dp"
            app:isb_only_thumb_draggable="false"/>

    </RelativeLayout>

    <TextView
        android:fontFamily="@font/poppins_semi_bold"
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/heigh_realtivelayout"/>

    <LinearLayout
        android:id="@+id/female"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/gender"
        android:layout_marginLeft="20dp"
        android:background="@color/gray"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:id="@+id/women"
            android:src="@mipmap/woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/male"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/gender"
        android:layout_marginLeft="10dp"
        android:background="@color/gray"
        android:layout_toRightOf="@id/female"
        android:orientation="horizontal">

        <ImageView
            android:background="#eee"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:id="@+id/boy"
            android:src="@mipmap/boy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>



    <Button
        android:fontFamily="@font/poppins_semi_bold"
        android:id="@+id/next_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_id"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/btn_dark_bg"
        android:paddingBottom="35dp"
        android:text="Next"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</RelativeLayout>